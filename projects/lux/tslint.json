{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "lux",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "lux",
      "kebab-case"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "no-console": [
      true,
      "log",
      "error"
    ]
  }
}
