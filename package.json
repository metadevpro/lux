    "build": "ng build --configuration production",
    "build:lux": "ng build lux --configuration production",
    "test": "ng test lux --watch=false",
    "test:coverage": "ng test lux --watch=false --code-coverage --browsers ChromeHeadlessCI",
    "test:travis": "ng test lux --watch=false --code-coverage --browsers ChromeHeadlessCI",
    "tdd": "ng test lux",
    "lint": "ng lint",
    "lint:lux": "ng lint lux",
    "publish-doc": "git push heroku devel:master",
    "npm-publish": "npm run lint:lux && npm run test:coverage && ng build lux --configuration production && npm publish ./dist/lux --access public"
  },
