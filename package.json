  "scripts": {
    "compodoc": "npx compodoc -p projects/lux/tsconfig.lib.json",
    "postinstall": "ng build lux --configuration production",
    "ng": "ng",
    "start": "ng serve",
    "start-heroku": "http-server -p $PORT dist/lux-demo/",
